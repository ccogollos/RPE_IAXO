-->
    <!-- Track cuts -->
    <globalCut name="tckAna.nTracksXYZ" condition="==${labelTrack}" value="${CutTrack}"/> 

    <!-- Energy cuts 
    <globalCut name="g4Ana.gasVolumeEDep" condition=">0.001" value="ON"/>
